  "id": "legacyvanillafix",
  "version": "${version}",

  "name": "Legacy VanillaFix",
  "description": "Bug fixes and optimizations for Minecraft",
  "authors": [
    "piper74"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/legacyvanillafix/"
  },

  "license": "MIT",
  "icon": "assets/legacyvanillafix/icon.png",

